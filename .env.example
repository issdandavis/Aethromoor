# Avalon Project Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git (it's in .gitignore)

# =============================================================================
# Required for AI Automation
# =============================================================================

# OpenAI API Key (for GPT-4, GPT-3.5, etc.)
# Get yours at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# GitHub Personal Access Token
# Automatically provided in GitHub Actions
# For local development: https://github.com/settings/tokens
GITHUB_TOKEN=ghp_your-github-token-here

# =============================================================================
# Optional AI Services
# =============================================================================

# Anthropic API Key (for Claude)
# Get yours at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# =============================================================================
# GitHub App Configuration (if using custom GitHub App)
# =============================================================================

# GitHub App ID
# Found in app settings: https://github.com/settings/apps
GITHUB_APP_ID=123456

# GitHub App Client ID
# Found in app settings
GITHUB_APP_CLIENT_ID=Iv1.abc123def456

# Path to GitHub App private key
# Generate in app settings and download .pem file
GITHUB_APP_PRIVATE_KEY_PATH=~/.github-apps/avalon-app.private-key.pem

# GitHub App Installation ID
# Get after installing app on repository
GITHUB_INSTALLATION_ID=12345678

# Webhook Secret (if using webhooks)
# Generate with: ruby -rsecurerandom -e 'puts SecureRandom.hex(20)'
GITHUB_WEBHOOK_SECRET=your-webhook-secret-here

# =============================================================================
# Optional Integrations
# =============================================================================

# Discord Webhook URL (for notifications)
# Create in Discord: Server Settings → Integrations → Webhooks
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook-url

# Slack Webhook URL (for notifications)
# Create in Slack: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your-webhook-url

# =============================================================================
# Development Settings
# =============================================================================

# Environment
NODE_ENV=development
# Options: development, production, test

# Debug Mode
DEBUG=true
# Set to false in production

# Log Level
LOG_LEVEL=info
# Options: error, warn, info, debug, trace

# =============================================================================
# Project Configuration
# =============================================================================

# Project name
PROJECT_NAME="Avalon - Polly's Wingscroll"

# Game version
GAME_VERSION=1.0.0

# ChoiceScript version
CHOICESCRIPT_VERSION=latest

# Minimum word count for scenes
MIN_WORD_COUNT=100

# Target total word count
TARGET_WORD_COUNT=40000

# =============================================================================
# AI Agent Configuration
# =============================================================================

# Default AI model
AI_MODEL=gpt-4
# Options: gpt-4, gpt-4-turbo, gpt-3.5-turbo, claude-3-opus

# AI temperature (0.0 - 2.0)
# Lower = more deterministic, Higher = more creative
AI_TEMPERATURE=0.7

# Maximum tokens per AI request
AI_MAX_TOKENS=2000

# Rate limiting
AI_RATE_LIMIT_PER_HOUR=100
AI_RATE_LIMIT_PER_DAY=500

# Cost controls
AI_MAX_DAILY_COST=5.00
AI_WARNING_THRESHOLD=0.8

# =============================================================================
# Testing Configuration
# =============================================================================

# Test environment
TEST_ENV=true

# Mock AI responses (for testing without API calls)
MOCK_AI_RESPONSES=false

# Test data directory
TEST_DATA_DIR=./test/data

# =============================================================================
# Security
# =============================================================================

# Enable secret scanning
ENABLE_SECRET_SCANNING=true

# Enable dependency alerts
ENABLE_DEPENDENCY_ALERTS=true

# Allowed domains for webhooks
ALLOWED_WEBHOOK_DOMAINS=github.com,githubusercontent.com

# =============================================================================
# Performance
# =============================================================================

# Enable caching
ENABLE_CACHING=true

# Cache TTL (seconds)
CACHE_TTL=3600

# Max concurrent AI requests
MAX_CONCURRENT_REQUESTS=4

# Request timeout (seconds)
REQUEST_TIMEOUT=30

# =============================================================================
# Monitoring
# =============================================================================

# Enable metrics collection
ENABLE_METRICS=true

# Metrics port (if running metrics server)
METRICS_PORT=9090

# Error tracking service (optional)
# SENTRY_DSN=https://your-sentry-dsn

# =============================================================================
# Notes
# =============================================================================

# 1. Copy this file to .env:
#    cp .env.example .env
#
# 2. Fill in your actual values
#
# 3. NEVER commit .env to git
#
# 4. Rotate keys regularly for security
#
# 5. Use GitHub Secrets for CI/CD:
#    gh secret set OPENAI_API_KEY
#
# 6. Keep sensitive values secure:
#    - Use environment-specific .env files
#    - Limit access to production keys
#    - Audit key usage regularly
