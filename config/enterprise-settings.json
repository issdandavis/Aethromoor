{
  "version": "1.0",
  "last_updated": "2025-11-26",
  "2fa_integration": {
    "enabled": false,
    "description": "Two-Factor Authentication integration and management",
    "providers": {
      "twofas": {
        "enabled": false,
        "api_endpoint": "",
        "sync_enabled": false,
        "auto_backup": true,
        "description": "TwoFAS (2FAS) integration for enterprise 2FA management"
      },
      "authy": {
        "enabled": false,
        "api_endpoint": "",
        "sync_enabled": false,
        "description": "Authy integration for 2FA codes"
      },
      "google_authenticator": {
        "enabled": false,
        "backup_enabled": true,
        "description": "Google Authenticator backup and sync"
      },
      "hardware_keys": {
        "enabled": false,
        "yubikey_support": false,
        "titan_key_support": false,
        "description": "Hardware security key validation"
      }
    },
    "automation": {
      "auto_validate_tokens": false,
      "backup_codes_to_secure_storage": true,
      "rotation_reminder": true,
      "rotation_frequency_days": 90
    },
    "enterprise_features": {
      "multi_account_2fa": true,
      "centralized_management": false,
      "emergency_access": {
        "enabled": false,
        "recovery_codes_stored": false
      }
    }
  },
  "enterprise_monitoring": {
    "enabled": true,
    "validation_frequency": "every_4_hours",
    "components_monitored": [
      "github_workflows",
      "automation_systems",
      "external_integrations",
      "2fa_status",
      "security_posture",
      "cloud_infrastructure"
    ],
    "ai_confirmation": {
      "enabled": true,
      "generate_reports": true,
      "report_retention_days": 90
    },
    "alerts": {
      "on_failure": true,
      "on_success": false,
      "critical_only": true
    }
  },
  "enterprise_cloud": {
    "enabled": true,
    "description": "Enterprise cloud infrastructure for hosting, backup, and disaster recovery",
    "config_file": "config/enterprise-cloud-config.json",
    "github_pages": {
      "enabled": true,
      "auto_deploy": true,
      "deployment_workflow": ".github/workflows/deploy-pages.yml"
    },
    "cloud_backup": {
      "enabled": true,
      "frequency": "weekly",
      "workflow": ".github/workflows/enterprise-cloud-backup.yml",
      "retention_days": 90
    },
    "cloud_monitoring": {
      "enabled": true,
      "integrated_with_enterprise_monitoring": true
    }
  },
  "external_services": {
    "gitlab": {
      "enabled": false,
      "requires_token": true,
      "token_secret_name": "GITLAB_TOKEN",
      "monitored": true
    },
    "bitbucket": {
      "enabled": false,
      "requires_token": true,
      "token_secret_name": "BITBUCKET_TOKEN",
      "monitored": true
    },
    "codeberg": {
      "enabled": false,
      "requires_token": true,
      "token_secret_name": "CODEBERG_TOKEN",
      "monitored": true
    },
    "email_service": {
      "enabled": false,
      "provider": "none",
      "requires_api_key": true,
      "secret_name": "EMAIL_SERVICE_API_KEY",
      "monitored": true
    }
  }
}
